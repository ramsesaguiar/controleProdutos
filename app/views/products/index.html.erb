<h1>Listando Produtos</h1>

<table>
  <tr>
    <th>Título </th>
    <th>Preço </th>
    <th>Data </th>
    <th>Descrição </th>
    
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= capitalizatitle(product.titulo) %></td>
    <td><%= product.preco %>    </td>
    <td><%= product.data.strftime("   %m/%M/%Y - %H:%M  ") %>    </td>
    <td align =center><%= product.descricao %>    </td>
    <td border=3><%= link_to 'Show', product %>   </td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, :method => :delete, :confirm => "tem certeza?" %></td>
  </tr>
<% end %>
</table>

<br />
<div>
<%= link_to 'Novo Produto', new_product_path %>
</div>
